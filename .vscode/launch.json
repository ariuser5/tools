	"version": "0.2.0",
	"configurations": [
		{
            "name": "Debug PubSubPrimer Watch Gmail",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-PubSubPrimer/src/cli/bin/Debug/net9.0/psub.exe",
            "args": [
                "watch", "gmail",
