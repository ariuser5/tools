            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "GCP_CREDENTIALS_PATH": "C:\\Users\\dariu\\_secrets\\GCP\\client_secret_566540516747-q0a8n9uteh0q8f4a7qd7vvi6f06tuqii.apps.googleusercontent.com.json"
            }
        },
        {
            "name": "Debug PubSubPrimer Cancel Gmail",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-PubSubPrimer/src/cli/bin/Debug/net9.0/psub.exe",
            "args": [
                "cancel", "gmail",
                "--verbosity", "4"
            ],
            "cwd": "${workspaceFolder}/GCP-PubSubPrimer/src/cli/bin/Debug/net9.0",
