            }
        },
        {
            "name": "Debug PubSubPrimer - Repeated",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-PubSubPrimer/src/cli/bin/Debug/net9.0/psub.exe",
            "args": [
                "watch", "gmail",
                "--verbosity", "4",
                "-f", "1",
                "--force-new", "First"
            ],
            "cwd": "${workspaceFolder}/GCP-PubSubPrimer/src/cli/bin/Debug/net9.0",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {}
        },
        {
            "name": "Debug Mailflow - Fetch",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0/mailflow.exe",
            "args": [
                "fetch",
                "-m", "1",
                "--labels", "IMPORTANT",
                "-v", "4"
            ],
            "cwd": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0",
            "console": "integratedTerminal",
            "stopAtEntry": false,
        },
        {
            "name": "Debug Mailflow - Polling for a short duration",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0/mailflow.exe",
            "args": [
                "subscribe",
                "--duration", "60s",
                "--interval", "10",
                "-v", "4"
            ],
            "cwd": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0",
            "console": "integratedTerminal",
            "stopAtEntry": false,
        },
        {
            "name": "Debug Mailflow - Pull for a short duration",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0/mailflow.exe",
            "args": [
                "subscribe", "--pull",
                "--application-name", "My-Pull-Gmail-Demo",
                "--subscription", "gmailToTask-sub",
                "--topic", "projects/smart-home-409915/topics/gmailToTask",
                "--labels", "INBOX",
                "--duration", "10m",
                "--setup-watch",
                "-v", "4"
            ],
            "cwd": "${workspaceFolder}/GCP-Mailflow/src/cli/bin/Debug/net9.0",
            "console": "integratedTerminal",
            "stopAtEntry": false,
